<%=form_for @measurement, url: form_url_helper(@item) do |f|%>
  <%=f.label :quantity%>
  <%=f.number_field :quantity %>
  <%=f.label :unit%>
  <%=f.text_field :unit%>

  <% if !@item %>
    <%=f.label :item %><br>
    <%=f.fields_for :item do |i|%>
      <%=i.label :name %>
      <%=i.text_field :name %>
    <%end%>

  <%end%>



  <%=f.submit "Create Measurement"%>

<%end%>
