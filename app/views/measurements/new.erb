<%=form_for @measurement do |f|%>
  <%=f.label :quantity%>
  <%=f.number_field :quantity %>
  <%=f.label :unit%>
  <%=f.text_field :unit%>
  <%=f.label :item %><br>
  <%=f.fields_for :item do |i|%>
    <%=i.label :name %>
    <%=i.text_field :name %>
  <%end%>
  <%=f.submit "Create Measurement"%>

<%end%>
