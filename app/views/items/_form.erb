<%=form_with model: @item, builder: CustomFormBuilder do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%=f.label "Measurements" %><br>
  <%=f.my_fields_for :measurements do |m|%>
    <%=m.label :quantity%>
    <%=m.number_field :quantity %><br>
    <%=m.label :unit%>
    <%=m.text_field :unit%><br>
  <%end%>
  <%=f.submit%>
<%end%>
