<%=form_for @item do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%=f.label "Measurements" %><br>
  <%=f.fields_for :measurements do |m|%>
    <%= m.hidden_field :user_id%>
    <%=m.label :quantity%>
    <%=m.number_field :quantity %><br>
    <%=m.label :unit%>
    <%=m.text_field :unit%><br>
  <%end%>
  <%=f.submit%>
<%end%>
